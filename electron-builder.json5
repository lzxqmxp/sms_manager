// @see https://www.electron.build/configuration/configuration
{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.sms.tool",
  "asar": true,
  "productName": "短信工具",
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist",
    "dist-electron"
  ],
  "mac": {
    "target": [
      "dmg"
    ],
    "artifactName": "sms-tool-mac-${version}-installer.${ext}"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "sms-tool-windows-${version}-setup.${ext}",
    "executableName": "SmsTool"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "shortcutName": "短信工具",
    "include": "build/installer.nsh"
  },
  "linux": {
    "target": [
      "AppImage"
    ],
    "artifactName": "sms-tool-linux-${version}.${ext}"
  }
}
